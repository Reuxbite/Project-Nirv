---
import '@/styles/global.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html
  class="dark bg-gradient-to-b from-slate-950 via-black to-black text-slate-100 scheme-light-dark"
  lang={SITE.locale}
  data-theme="dark"
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-mono animate-fade-in">
    <header
      class="bg-gradient-to-b from-slate-950/80 via-black/80 to-black/80 sticky top-0 z-50 divide-y divide-blue-600 backdrop-blur-sm xl:divide-none animate-slide-down"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4', className)}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
